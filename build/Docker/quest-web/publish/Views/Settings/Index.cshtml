@{
    ViewBag.Title = "Settings";
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/core")
    @Scripts.Render("~/bundles/settings")
}

<style type="text/css">
    .toggle {
        width: 60px;
        height: 35px;
    }

        .toggle .toggle-group {
            transition: left 0.1s;
            -webkit-transition: left 0.1s;
        }
</style>

<div style="clear:both; margin-left:20px">
    <fieldset>
        <table>
            <tr>
                <td style="padding-top:20px" colspan="2">
                    <h4>Map Settings</h4>
                </td>
            </tr>
            <tr>
                <td style="padding-bottom: 20px">
                    <label style="margin-right: 10px; font-weight: normal">Use local map server: </label>
                </td>
                <td style="padding-bottom: 20px">
                    <input id="localmode" type="checkbox" data-toggle="toggle" data-size="small">
                </td>
            </tr>

            <tr>
                <td style="padding-top:20px" colspan="2">
                    <h4>Telephony Settings</h4>
                </td>
            </tr>
            <tr>
                <td style="padding-bottom:20px">
                    <label style="margin-right: 10px; font-weight:normal">Extension: </label>
                </td>
                <td style="padding-bottom:20px">

                    <div >
                        <input id="extension" type="number">
                    </div>
                </td>
            </tr>
            <tr>
                <td style="padding-top:20px" colspan="2">
                    <h4>User Account</h4>
                </td>
            </tr>
            <tr>
                <td style="padding-bottom:20px">
                    <label style="margin-right: 10px; font-weight:normal"></label>
                </td>
                <td style="padding-bottom:20px">
                    @Html.ActionLink("Logoff", "Logout", "Account")
                </td>
            </tr>
            <tr>
                <td style="padding-bottom:20px">
                    <label style="margin-right: 10px; font-weight:normal"></label>
                </td>
                <td style="padding-bottom:20px">
                    @Html.ActionLink("Manage Password", "Manage", "Account")
                </td>
            </tr>
            @if (ViewBag.IsAdmin)
            {
                <tr>
                    <td style="padding-bottom:20px">
                        <label style="margin-right: 10px; font-weight:normal">Authorise users: </label>
                    </td>
                    <td style="padding-bottom:20px">
                        @Html.ActionLink("Authorise", "Authorise", "Account")
                    </td>
                </tr>
                <tr>
                    <td style="padding-bottom:20px">
                        <label style="margin-right: 10px; font-weight:normal">Register new user: </label>
                    </td>
                    <td style="padding-bottom:20px">
                        @Html.ActionLink("Register", "AdminRegister", "Account")
                    </td>
                </tr>
                <tr>
                    <td style="padding-bottom:20px">
                        <label style="margin-right: 10px; font-weight:normal">Manage Devices</label>
                    </td>
                    <td style="padding-bottom:20px">
                        @Html.ActionLink("Manage","Index", "DeviceManager")
                    </td>
                </tr>
            }
        </table>
        <br />
    </fieldset>
</div>
