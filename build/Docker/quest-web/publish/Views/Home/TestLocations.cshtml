@model Quest.Mobile.Models.TestLocationsModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "";
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/testlocations")
    @Styles.Render("~/Content/core")
}

<style>
    table, td, th {
        border: 1px solid #ddd;
        text-align: left;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }
</style>

<div class="container" style="height: 100%; overflow: auto;">
    <h2>Batch Test</h2>
    <section id="loginForm">
        <h4>Use this form to test batches of locations. Enter each location onto a separate line and click the <b>Submit</b> button.</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(m => m.Locations)
            @Html.TextArea("Locations", new { rows = 5, columns = 80, @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Locations)
        </div>
        <div class="form-group">
            <div class="">
                <input type="submit" value="Submit" class="btn btn-default" id="submit" />
            </div>
        </div>
    </section>
    <div id="jobid" class="form-group">
    </div>
    <div class="form-group">
        <table id="results" class="form-group">
            <thead><tr><td>text</td><td>result</td><td>speed</td><td>count</td><td>score</td></tr></thead>
                <tbody></tbody>
        </table>
    </div>
</div>

