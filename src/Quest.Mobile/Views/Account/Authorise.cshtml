@model Quest.Mobile.Models.AuthoriseViewModel
@{
    ViewBag.Title = "Authorise";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Authorise", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Authorise an account.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Groups, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Groups, new { @class = "form-control" })
        </div>
        ( <i>type a comma-separated list from : @Html.DisplayTextFor(m => m.ValidGroups) </i>)
    </div>
    @*<div class="form-group">
        @Html.LabelFor(m => m.Locked, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.CheckBoxFor(m => m.Locked, new { @class = "form-control" })
        </div>
    </div>*@
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/core")
    @Scripts.Render("~/bundles/jqueryval")
}
