@model Quest.WebCore.Models.HudModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    @foreach (var f in Model.Styles)
    {
    <link href="@f" rel="stylesheet" />
    }
</head>
<body>
    <div class="container-fluid">
        <div class="row full-height">
            @Html.Partial("_Hud", Model.Layout)
        </div>
    </div>

    <span id="pluginLoaderUrl" data-url="@Url.Action("Create", "Plugin")"></span>
    <span id="layoutLoaderUrl" data-url="@Url.Action("GetLayout", "Plugin")"></span>

    <!-- Required external libraries -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/underscore/underscore.js"></script>
    <script src="~/js/signalr-client-1.0.0-alpha2-final.js"></script>

    <!-- The core hud library -->
    <script type="text/javascript" src="~/js/hud.js"></script>

    <!-- Include the libraries for any plugin that might be called -->
    @foreach (var f in Model.Scripts)
    {
        <script src="@f"></script>
    }

    <script type="text/javascript">
        $(function () {
            hud.initialize();

            // Reference the auto-generated proxy for the hub.
            //var centralHub = $.connection.centralHub;
            });
    </script>

    @for (int i = 0; i < Model.Layout.Panels.Count; i++)
    {
        if (!string.IsNullOrEmpty(Model.Layout.Panels[i].Plugin))
        {
            <script>hud.loadPanel("@Model.Layout.Panels[i].Plugin","@i")</script>
        }
    }
</body>
</html>
