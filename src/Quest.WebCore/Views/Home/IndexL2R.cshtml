@model Quest.WebCore.Models.HudLayout

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    @foreach (var f in Model.Styles)
    {
    <link href="@f" rel="stylesheet" />
    }
</head>
<body>
<div class="container-fluid">
    <div class="row full-height">

        <div class="col-md-9 full-height" id="main-panel-wrapper">
            @Html.Partial("_HudMainPanel", new HudPanel { role = 0 })
        </div>
        
        <div class="col-md-3 full-height" id="side-panel-wrapper">
            
            <div class="row half-height">
                <div class="col-sm-12 full-height">
                    @Html.Partial("_HudMiniPanelTop", new HudPanel { role = 1 })
                </div>
            </div>

            <div class="row half-height">
                <div class="col-sm-12 full-height">
                    @Html.Partial("_HudMiniPanelBottom", new HudPanel { role = 2 })
                </div>
            </div>
        </div>
    </div>
</div>
<span id="pluginLoaderUrl" data-url="@Url.Action("Create", "Plugin")"></span>

    <!-- Required external libraries -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/underscore/underscore.js"></script>

    <script src="~/js/signalr-client-1.0.0-alpha2-final.js"></script>
    <!--Reference the SignalR library. 
    <script type="text/javascript" src="~/Scripts/jquery.signalR-2.2.2.js"></script>
    <script type="text/javascript" src="~/signalr/hubs"></script>
        -->

    <!-- The core hud library -->
    <script type="text/javascript" src="~/js/hud.js"></script>

    <!-- Include the libraries for any plugin that might be called -->

    @foreach (var f in Model.Scripts)
    {
    <script src="@f"></script>
    }

    <script type="text/javascript">
        $(function () {
            hud.initialize();

            // Reference the auto-generated proxy for the hub.
            //var centralHub = $.connection.centralHub;
            });
    </script>

    @for(int i=0; i< Model.Panels.Count;i++)
    {
        <script>hud.loadPanel("@Model.Panels[i]","@i")</script>
    }

</body>
</html>
